#include <iostream>
using namespace std;
int main() {
    int number;
    cout<<"Enter a number:" <<endl;
    cin>>number;    
    if(number>0){
        cout<<"The given number is positive." <<endl;
    }  
    else if(number<0){
        cout<<"The given number is negative." <<endl;
    }    
    else{
        cout<<"Number is zero." <<endl;
    } 
    return 0;
}
