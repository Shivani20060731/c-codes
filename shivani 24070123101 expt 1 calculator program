#include <iostream>
using namespace std;
int main() {
    char oper;
    float n1, n2;
    cout << "Enter an operator (+, -, /, *): ";
    cin >> oper;
    cout << "Enter the first number: ";
    cin >> n1;
    cout << "Enter the second number: ";
    cin >> n2;
    switch (oper) {
        case '+':
            cout << n1 << " + " << n2 << " = " << n1 + n2 << endl;
            break;
        case '-':
            cout << n1 << " - " << n2 << " = " << n1 - n2 << endl;
            break;
        case '*':
            cout << n1 << " * " << n2 << " = " << n1 * n2 << endl;
            break;
        default:
            cout << "ERROR!" << endl;
            break;
    }
    return 0;
}

